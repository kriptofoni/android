<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/main_coins_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="1"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/main_coins_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:id="@+id/main_coins_coin_name"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Bitcoin"
                android:textColor="#000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/main_coins_coin_shortcut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="BTC"
                android:textColor="#000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/main_coins_change_in_24_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="%7.99"
                android:textColor="#000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/main_coins_change_in_7_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%13.29"
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_marginLeft="40dp" />

            <TextView
                android:id="@+id/main_coins_current_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$55.944,81"
                android:textColor="#000"
                android:textSize="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="30dp"/>

            <Button
                android:id="@+id/main_coins_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BUY"
                android:background="#00b052"
                android:layout_marginLeft="40dp"
                android:textColor="#fff"
                android:textSize="20dp"
                android:visibility="gone"/>

        </LinearLayout>

    </HorizontalScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>