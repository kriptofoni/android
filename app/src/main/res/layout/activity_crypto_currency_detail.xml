<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CryptoCurrencyDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/detail_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/iconLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.12"
            android:orientation="vertical" />

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/coinIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintStart_toStartOf="@id/iconLeft"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/coinName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bitcoin BTC"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/coinIcon" />

        <TextView
            android:id="@+id/coinMarketCap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$1.727.274.164.343"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@id/coinName"
            app:layout_constraintStart_toEndOf="@id/coinIcon"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/detail_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USD"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

  <ScrollView
      android:layout_below="@id/detail_header"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

          <RelativeLayout
              android:id="@+id/valueAndChangeLayout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <TextView
                  android:id="@+id/currentPrice"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="25dp"
                  android:textStyle="bold"
                  android:textColor="#000"
                  android:text="$55.934,69"
                  android:layout_alignParentLeft="true"
                  android:layout_marginLeft="20dp"
                  android:layout_marginVertical="10dp"
                  />

              <TextView
                  android:id="@+id/change"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="25sp"
                  android:textColor="#000"
                  android:layout_alignParentRight="true"
                  android:text="%8,01"
                  android:layout_marginEnd="20dp"
                  android:layout_marginVertical="10dp"
                  />

          </RelativeLayout>

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="400dp"
              tools:context=".MainActivity">

              <com.github.mikephil.charting.charts.LineChart
                  android:id="@+id/chart"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent" >

                  <com.github.mikephil.charting.charts.CandleStickChart
                      android:id="@+id/candleStickChart"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent" />
              </com.github.mikephil.charting.charts.LineChart>

          </RelativeLayout>

          <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="400dp"
              tools:context=".MainActivity">

          </RelativeLayout>

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp">

              <TextView
                  android:id="@+id/valueTag"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
                  android:layout_marginLeft="20dp"
                  android:textColor="#797676"
                  android:textSize="20dp"
                  android:text="Price"
                  android:layout_marginVertical="10dp"/>

              <TextView
                  android:id="@+id/coin_orice_change"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="20dp"
                  android:layout_marginVertical="5dp"
                  android:textColor="#000"
                  android:text="%8,01"/>

              <TextView
                  android:id="@+id/value"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_below="@id/coin_orice_change"
                  android:layout_marginRight="20dp"
                  android:textColor="#000"
                  android:layout_marginBottom="5dp"
                  android:text="$55.934,69"/>

          </RelativeLayout>

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp">

              <TextView
                  android:id="@+id/price_in_btc"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
                  android:layout_marginLeft="20dp"
                  android:textColor="#797676"
                  android:textSize="20dp"
                  android:text="Price BTC"
                  android:layout_marginVertical="10dp"/>

              <TextView
                  android:id="@+id/coin_price_in_btc_change"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="20dp"
                  android:layout_marginVertical="5dp"
                  android:textColor="#000"
                  android:text="%8,01"/>

              <TextView
                  android:id="@+id/in_btc_value"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_below="@id/coin_price_in_btc_change"
                  android:layout_marginRight="20dp"
                  android:textColor="#000"
                  android:layout_marginBottom="5dp"
                  android:text="$55.934,69"/>

          </RelativeLayout>

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp">

              <TextView
                  android:id="@+id/oneHourChangeTag"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
                  android:layout_marginLeft="20dp"
                  android:textColor="#797676"
                  android:textSize="20dp"
                  android:text="1 Hour Change"
                  android:layout_marginVertical="10dp"/>

              <TextView
                  android:id="@+id/oneHourChange"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="20dp"
                  android:layout_centerVertical="true"
                  android:textColor="#000"
                  android:text="%3,99"/>

          </RelativeLayout>

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp">

              <TextView
                  android:id="@+id/twentyFourHoursChangeTag"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
                  android:layout_marginLeft="20dp"
                  android:layout_marginVertical="10dp"
                  android:textColor="#797676"
                  android:textSize="20dp"
                  android:text="24 Hours Change" />

              <TextView
                  android:id="@+id/twentyFourHoursChange"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="20dp"
                  android:layout_centerVertical="true"
                  android:textColor="#000"
                  android:text="%8,01"/>

          </RelativeLayout>

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp">

              <TextView
                  android:id="@+id/sevenDaysChangeTag"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
                  android:layout_marginLeft="20dp"
                  android:layout_marginVertical="10dp"
                  android:textColor="#797676"
                  android:textSize="20dp"
                  android:text="7 Days Change" />

              <TextView
                  android:id="@+id/sevenDaysChange"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="20dp"
                  android:layout_centerVertical="true"
                  android:textColor="#000"
                  android:text="%12,23"/>

          </RelativeLayout>

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp">

              <TextView
                  android:id="@+id/marketValueTag"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
                  android:layout_marginLeft="20dp"
                  android:layout_marginVertical="10dp"
                  android:textColor="#797676"
                  android:textSize="20dp"
                  android:text="Market Value" />

              <TextView
                  android:id="@+id/marketValue"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="20dp"
                  android:layout_centerVertical="true"
                  android:textColor="#000"
                  android:text="$1.043.429.773.603,56"/>

          </RelativeLayout>

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp">

              <TextView
                  android:id="@+id/twentyFoursHoursMarketVolumeTag"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
                  android:layout_marginLeft="20dp"
                  android:layout_marginVertical="10dp"
                  android:textColor="#797676"
                  android:textSize="20dp"
                  android:text="24 Hours Vol" />

              <TextView
                  android:id="@+id/twentyFoursHoursMarketVolume"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="20dp"
                  android:layout_centerVertical="true"
                  android:textColor="#000"
                  android:text="$56.549.897.996,96"/>

          </RelativeLayout>

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp">

              <TextView
                  android:id="@+id/circulatingSupplyTag"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
                  android:layout_marginLeft="20dp"
                  android:layout_marginVertical="10dp"
                  android:textColor="#797676"
                  android:textSize="20dp"
                  android:text="Circulating Supply" />

              <TextView
                  android:id="@+id/circulatingSupply"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_centerVertical="true"
                  android:layout_marginRight="20dp"
                  android:textColor="#000"
                  android:text="18.654.431"/>

          </RelativeLayout>

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp">

              <TextView
                  android:id="@+id/totalSupplyTag"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
                  android:layout_marginLeft="20dp"
                  android:layout_marginVertical="10dp"
                  android:textColor="#797676"
                  android:textSize="20dp"
                  android:text="Total Supply" />

              <TextView
                  android:id="@+id/totalSupply"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_centerVertical="true"
                  android:layout_marginRight="20dp"
                  android:textColor="#000"
                  android:text="21.000.000"/>

          </RelativeLayout>

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp">


              <ImageView
                  android:id="@+id/webIcon"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@drawable/ic_globe"
                  android:layout_marginStart="20dp"
                  android:layout_marginVertical="10dp" />

              <TextView
                  android:id="@+id/webSite"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_toRightOf="@id/webIcon"
                  android:layout_marginStart="40dp"
                  android:textColor="#000"
                  android:layout_centerVertical="true"
                  android:textSize="20dp"
                  android:text="Web Page"/>

          </RelativeLayout>

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp">

              <ImageView
                  android:id="@+id/redditIcon"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@drawable/ic_reddit"
                  android:layout_marginStart="20dp"
                  android:layout_marginVertical="10dp" />

              <TextView
                  android:id="@+id/reddit"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_toRightOf="@id/redditIcon"
                  android:layout_marginStart="40dp"
                  android:layout_centerVertical="true"
                  android:textSize="20dp"
                  android:textColor="#000"
                  android:text="Reddit"/>

          </RelativeLayout>

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp">

              <ImageView
                  android:id="@+id/twitterIcon"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@drawable/ic_twitter"
                  android:layout_marginStart="20dp"
                  android:layout_marginVertical="10dp" />

              <TextView
                  android:id="@+id/twitter"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_toRightOf="@id/twitterIcon"
                  android:layout_marginStart="40dp"
                  android:textColor="#000"
                  android:layout_centerVertical="true"
                  android:textSize="20dp"
                  android:text="Twitter"/>

          </RelativeLayout>

          <RelativeLayout
              android:layout_marginBottom="20dp"
              android:layout_marginTop="10dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <androidx.constraintlayout.widget.ConstraintLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  >

                  <androidx.constraintlayout.widget.Guideline
                      android:id="@+id/middle"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      app:layout_constraintGuide_percent="0.5" />

                  <Button
                      android:id="@+id/addWatchingList"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:background="@drawable/detail_button"
                      android:text="Add watching list"
                      android:layout_marginVertical="10dp"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintEnd_toEndOf="@id/middle"
                      android:layout_marginHorizontal="5dp"/>

                  <Button
                      android:id="@+id/addToProt"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:text="Add to port"
                      android:background="@drawable/detail_button"
                      android:layout_marginVertical="10dp"
                      app:layout_constraintTop_toTopOf="parent"
                      app:layout_constraintStart_toStartOf="@id/middle"
                      app:layout_constraintEnd_toEndOf="parent"
                      android:layout_marginHorizontal="5dp"
                       />

                  <Button
                      android:id="@+id/setAlarm"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:background="@drawable/detail_button"
                      android:text="Set Alarm"
                      android:layout_marginVertical="10dp"
                      app:layout_constraintTop_toBottomOf="@id/addToProt"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintEnd_toEndOf="parent"
                      android:layout_marginHorizontal="5dp" />

              </androidx.constraintlayout.widget.ConstraintLayout>

          </RelativeLayout>



      </LinearLayout>

  </ScrollView>


</RelativeLayout>


