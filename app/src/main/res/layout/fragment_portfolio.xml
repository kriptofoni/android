<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.92"
        android:orientation="horizontal" />

    <RelativeLayout
        android:id="@+id/detail_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/portfolio_add_coin"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_add_24"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/portfolio_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USD"
            android:textSize="20dp"
            android:textColor="#000"
            android:layout_marginVertical="10dp"
            android:layout_toLeftOf="@id/portfolio_select_coins"
            android:layout_marginRight="30dp"
            />

        <ImageView
            android:id="@+id/portfolio_select_coins"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_more_vert_24"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/portfolio_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_delete_24"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:visibility="gone"/>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/portfolio_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <RelativeLayout
        android:id="@+id/portfolio_no_coin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detail_header"
        app:layout_constraintBottom_toBottomOf="@id/bottom"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/no_coin_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Manuel Operation"
            android:textSize="20dp"
            android:textColor="#000"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/not_sync_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Not Synchronized)"
            android:textSize="16dp"
            android:textColor="#797676"
            android:layout_below="@id/no_coin_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/portfolio_no_coin_add"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/detail_button"
            android:text="Add Manuel Operation"
            android:textColor="#f2a900"
            android:layout_below="@id/not_sync_text"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/portfolio_has_coin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/detail_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="visible">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:nestedScrollingEnabled="false" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:nestedScrollingEnabled="false" >

                <TextView
                    android:id="@+id/my_portfolio_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Portfolio"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="20dp"/>

                <TextView
                    android:id="@+id/portfolio_total_price_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 282.300,86"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="20dp"/>

                <TextView
                    android:id="@+id/portfolio_price_change_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-$213,22 (-%0,08)"
                    android:textSize="15dp"
                    android:textColor="#ff0000"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="20dp"/>

                <RelativeLayout
                    android:id="@+id/graph"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginVertical="10dp">

                    <ProgressBar
                        android:id="@+id/portfolio_chart_progress_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:visibility="gone" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/portfolio_chart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp">

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/oneHourLeft"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintGuide_percent="0.1"
                            android:orientation="vertical" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/tfHourLeft"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintGuide_percent="0.21"
                            android:orientation="vertical" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/oneWeekLeft"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintGuide_percent="0.33"
                            android:orientation="vertical" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/oneMonthLeft"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintGuide_percent="0.44"
                            android:orientation="vertical" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/threeMonthsLeft"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintGuide_percent="0.55"
                            android:orientation="vertical" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/sixMonthsLeft"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintGuide_percent="0.66"
                            android:orientation="vertical" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/oneYearLeft"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintGuide_percent="0.77"
                            android:orientation="vertical" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/allLeft"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintGuide_percent="0.87"
                            android:orientation="vertical" />

                        <TextView
                            android:id="@+id/portfolio_1h"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 H"
                            app:layout_constraintLeft_toLeftOf="@id/oneHourLeft"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>


                        <TextView
                            android:id="@+id/portfolio_24h"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24 H"
                            app:layout_constraintLeft_toLeftOf="@id/tfHourLeft"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <TextView
                            android:id="@+id/portfolio_1w"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 W"
                            app:layout_constraintLeft_toLeftOf="@id/oneWeekLeft"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <TextView
                            android:id="@+id/portfolio_1m"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 M"
                            app:layout_constraintLeft_toLeftOf="@id/oneMonthLeft"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <TextView
                            android:id="@+id/portfolio_3m"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 M"
                            app:layout_constraintLeft_toLeftOf="@id/threeMonthsLeft"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <TextView
                            android:id="@+id/portfolio_6m"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6 M"
                            app:layout_constraintLeft_toLeftOf="@id/sixMonthsLeft"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <TextView
                            android:id="@+id/portfolio_1y"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 Y"
                            app:layout_constraintLeft_toLeftOf="@id/oneYearLeft"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <TextView
                            android:id="@+id/portfolio_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="All"
                            app:layout_constraintLeft_toLeftOf="@id/allLeft"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </RelativeLayout>

                <TextView
                    android:id="@+id/portfolio_total_principal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Principal: $200.000"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/portfolio_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:layout_marginTop="10dp" />

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>